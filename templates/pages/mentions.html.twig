{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: white; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ page.name }} ✅</h1>
    <h5 class="text-muted m-2 text-end">Révision du {{page.DateUp}}</h5>
    <div>
        {# Affichage des chapitres concernant les mentions légales #}
        {% for chapter in chapters %}
            <h4 class="font-weight-bold">{{ chapter.name|e }}</h4>
            <p class="pl-1">{{ chapter.texte|nl2br}}</p>
        {% endfor %}
        </div>
</div>
{% endblock %}