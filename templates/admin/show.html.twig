{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>DateAdhesion</th>
                <td>{{ user.dateAdhesion ? user.dateAdhesion|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ user.tel }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row d-flex justify-content-between">
        <div class="col-sm-3">
            <a class="btn btn-primary" href="{{ path('app_admin_index') }}">Retour <i class="fa fa-backward"></i></a>
        </div>
        <div class="col-sm-3">
            <a class="btn btn-warning" href="{{ path('app_admin_edit', {'id': user.id}) }}">Modifier <i class="fa fa-edit"></i></a>
        </div>
    </div>

