{% extends 'base.html.twig' %}

{% block title %}Questions{% endblock %}

{% block body %}
    <h1>Questions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ question.contenu }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ question.reponse }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ question.modifiedAt ? question.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>AnsweredAt</th>
                <td>{{ question.answeredAt ? question.answeredAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsVisible</th>
                <td>{{ question.isVisible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row d-flex justify-content-between">
        <div class="col-sm-4">
            {# <a href="{{ path('app_questions_index') }}">back to list</a> #}
            <a class="btn btn-primary" href="{{ path('app_questions_index') }}">Retour <i class="fa fa-backward"></i></a>
        </div>
        {% if question.isVisible == false %}
            <div class="col-sm-4">
                {# <a href="{{ path('app_questions_edit', {'id': question.id}) }}">edit</a> #}
                <a class="btn btn-warning" href="{{ path('app_questions_edit', {'id': question.id}) }}">Modifier <i class="fa fa-edit"></i></a>
            </div>
            <div class="col-sm-4">
                {{ include('questions/_delete_form.html.twig') }}  
            </div>
        {% endif %}
    </div>
{% endblock %}
